	.star-clusters {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 4;
		opacity: 0.6;
	}

	.star-clusters::before {
		content: "";
		position: absolute;
		width: 100%;
		height: 100%;
		background:
			radial-gradient(1px 1px at 10% 10%, rgba(255, 255, 255, 1) 1%, transparent 2%),
			radial-gradient(1.5px 1.5px at 20% 50%, rgba(255, 255, 255, 0.8) 1%, transparent 2%),
